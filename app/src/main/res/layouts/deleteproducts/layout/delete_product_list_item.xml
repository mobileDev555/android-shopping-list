<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="8sp"
        card_view:cardCornerRadius="4sp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/checkbox_is_selected"
            android:layout_width="wrap_content"
            android:padding="@dimen/list_padding"
            android:enabled="false"
            android:layout_marginLeft="@dimen/list_margin"
            android:buttonTint="@color/black"
            android:layout_height="@dimen/listPreferredItemHeight"
            android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/share_button_list"
            android:layout_width="60sp"
            android:layout_height="@dimen/listPreferredItemHeight"
            android:tint="?attr/colorAccent"
            android:layout_centerVertical="true"
            android:padding="15sp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_share_blue_24dp"/>
        <TextView
                android:id="@+id/textview_product_name"
                android:text="@string/ph_product_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_toRightOf="@id/checkbox_is_selected"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/status_width"
                android:paddingRight="@dimen/status_width"
                android:paddingLeft="@dimen/status_width"
                android:textSize="@dimen/text_large"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

        <TextView
                android:id="@+id/textview_prod_quantity"
                android:text="@string/ph_list_nr_items"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/list_margin"
                android:padding="@dimen/status_width"
                android:textSize="@dimen/text_medium"
                android:layout_alignParentRight="true"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        <android.support.v7.widget.CardView
                android:id="@+id/cardview_item"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4sp"
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>
