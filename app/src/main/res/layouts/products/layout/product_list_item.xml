<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/summary_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listPreferredItemHeight">

            <CheckBox
                android:id="@+id/checkbox_is_selected"
                android:layout_width="wrap_content"
                android:padding="@dimen/list_padding"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:buttonTint="?attr/colorAccent"
                android:layout_marginLeft="@dimen/list_margin"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/button_normal"
                android:textColor="@color/white"
                android:text="+"
                android:id="@+id/product_button_plus"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/checkbox_is_selected"/>
            <TextView
                    android:id="@+id/textview_product_name"
                    android:text="@string/ph_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/listPreferredItemHeight"
                    android:layout_marginRight="80sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/status_width"
                    android:paddingRight="@dimen/status_width"
                    android:paddingLeft="@dimen/status_width"
                    android:layout_toRightOf="@+id/checkbox_is_selected"
                    android:textSize="@dimen/text_large"
                    style="@style/Base.TextAppearance.AppCompat.Body2"/>
            <TextView
                android:id="@+id/textview_product_info"
                android:text="@string/ph_product_info"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:layout_marginRight="@dimen/list_margin_big"
                android:textSize="@dimen/text_small"
                android:textColor="@color/middlegrey"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textview_product_name"/>


            <TextView
                android:id="@+id/textview_prod_quantity"
                android:text="@string/ph_list_nr_items"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_toLeftOf="@id/expand_button_list"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/list_margin"
                android:padding="@dimen/status_width"
                android:textSize="@dimen/text_medium"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <ImageButton
                    android:id="@+id/expand_button_list"
                    android:layout_width="50sp"
                    android:layout_height="@dimen/listPreferredItemHeight"
                    android:tint="?attr/colorAccent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:padding="15sp"
                    android:scaleType="fitCenter"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_keyboard_arrow_down_white_48sp"/>

        </RelativeLayout>

        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/textview_list_details"
                    android:text="@string/ph_lists_details"
                    android:layout_width="match_parent"
                    android:textStyle="italic"
                    android:paddingLeft="@dimen/list_padding"
                    android:layout_marginLeft="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_marginBottom="@dimen/list_margin"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/product_image_in_detail"/>

            <ImageView
                    android:id="@+id/product_image_in_detail"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_width="@dimen/foto_preview_size"
                    android:layout_height="@dimen/foto_preview_size"
                    android:scaleType="fitCenter"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
