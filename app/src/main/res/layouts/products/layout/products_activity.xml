<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/logo_font_shop1"
            android:layout_weight="0.2"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_more_horiz_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/default_round"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/search_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/cancel_search"
                android:layout_weight="0.2"
                android:hint=" "
                android:gravity="center"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance">

                <AutoCompleteTextView
                    android:id="@+id/search_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/default_textview"
                    android:hint="@string/search"
                    android:paddingLeft="8sp"
                    android:selectAllOnFocus="true"></AutoCompleteTextView>
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:id="@+id/sort_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_sort_black_24dp"/>
            <ImageView
                android:id="@+id/delete_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_delete_black_24dp"/>
            <ImageView
                android:id="@+id/share_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_share_blue_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="Shopping List"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_arrow_drop_down_black_24dp"/>

    <ImageButton
            android:visibility="gone"
            android:id="@+id/cancel_search"
            android:tint="@color/colorAccent"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_cancel_white_48sp"
            android:layout_width="45sp"
            android:layout_height="38sp"
            android:layout_marginTop="12sp"
            android:layout_marginRight="6sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/search_input_layout"/>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-25dp"
            android:layout_above="@+id/layout_total"
            android:layout_below="@+id/search_input_layout">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_above="@+id/layout_total"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_new_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:tint="@color/white"
                android:src="@android:drawable/ic_input_add"
                app:layout_anchor="@id/recyclerView"
                app:layout_anchorGravity="bottom|right|end"/>

        <LinearLayout
                android:visibility="gone"
                android:id="@+id/insert_alert"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_margin"
                android:paddingRight="70sp"
                android:gravity="center_vertical"
                app:layout_anchor="@id/fab_new_product"
                app:layout_anchorGravity="bottom|left"
                android:layout_width="wrap_content"
                android:layout_height="50sp">

            <TextView
                    android:text="@string/alert_message_product"
                    android:gravity="center_vertical"
                    android:textStyle="bold|italic"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
            android:id="@+id/no_products_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"/>

        <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="@string/product_list_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <include
            layout="@layout/products_total_amount"/>

</LinearLayout>